{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ES2015",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "moduleResolution": "node"
    },
    // 包含的文件
    "include": [
        "src/**/*"
    ],
    // 排除的文件
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}